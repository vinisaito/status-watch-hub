// dentro do ActionTable
const advanceEscalation = async (chamadoId: number, nextLevel: number, observacao: string) => {
  try {
    await fetch(`/api/chamados/${chamadoId}/advance`, {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({
        nextLevel,
        observacao,
      }),
    });

    console.log(`‚úÖ Chamado ${chamadoId} avan√ßado para o n√≠vel ${nextLevel}`);
    // üîπ Atualiza estado local ou refaz fetch da tabela
    refreshChamados();
  } catch (err) {
    console.error("‚ùå Erro ao avan√ßar escala√ß√£o:", err);
  }
};