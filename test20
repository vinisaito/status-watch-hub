const ReenviarButton = ({ chamado }: { chamado: string }) => {
  const { reenviarAcionado } = useChatAcionados();

  if (!chamado) return null;

  return (
    <Button
      onClick={() => reenviarAcionado(chamado)}
      variant="secondary"
      className="bg-white/20 text-white hover:bg-white/30"
    >
      ðŸ”„ Reenviar alerta
    </Button>
  );
};