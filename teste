ws.onmessage = (event) => {
  if (!event.data || event.data.trim() === "") {
    console.warn("ğŸ“­ Mensagem vazia recebida, ignorando.");
    return;
  }

  try {
    const data: MessageData = JSON.parse(event.data);
    console.log("ğŸ“© Mensagem recebida:", data);

    if (data.action === "timerStarted") {
      timerStartRef.current = data.timerStart ?? null;
      setChamadoId(data.chamado ?? null);
    } else if (data.action === "statusUpdated") {
      setStatus(data.status ?? "pendente");
    } else if (data.action === "currentState") {
      timerStartRef.current = data.timerStart ?? null;
      setChamadoId(data.chamado ?? null);
      setStatus(data.status ?? "pendente");
    }
  } catch (err) {
    console.warn("âš ï¸ Mensagem nÃ£o era JSON, ignorada:", event.data);
  }
};
