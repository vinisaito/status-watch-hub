import { Card } from "@/components/ui/card";
import type { ProductLine, RDM } from "@/types/rdm";
import { CheckCircle2, Clock, XCircle } from "lucide-react";
import { cn } from "@/lib/utils";

interface RDMTimelineProps {
  productLine: ProductLine;
}

const statusConfig = {
  executed: {
    icon: CheckCircle2,
    color: "text-[hsl(var(--success))]",
    bgColor: "bg-[hsl(var(--success-light))]",
    label: "Executada",
  },
  pending: {
    icon: Clock,
    color: "text-[hsl(var(--warning))]",
    bgColor: "bg-[hsl(var(--warning-light))]",
    label: "Pendente",
  },
  failed: {
    icon: XCircle,
    color: "text-[hsl(var(--destructive))]",
    bgColor: "bg-red-50",
    label: "Falhou",
  },
};

const RDMTimeline = ({ productLine }: RDMTimelineProps) => {
  return (
    <div className="space-y-4">
      <div className="flex items-center gap-3 mb-6">
        <div
          className="w-4 h-4 rounded-full"
          style={{ backgroundColor: productLine.color }}
        />
        <h3 className="text-xl font-bold text-foreground">{productLine.name}</h3>
      </div>

      <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        {productLine.rdms.map((rdm) => {
          const config = statusConfig[rdm.status];
          const Icon = config.icon;

          return (
            <Card
              key={rdm.id}
              className={cn(
                "p-4 border-l-4 transition-all duration-300 hover:shadow-md hover:-translate-y-0.5",
                config.bgColor
              )}
              style={{ borderLeftColor: productLine.color }}
            >
              <div className="flex items-start justify-between mb-2">
                <div className="flex items-center gap-2">
                  <Icon className={cn("h-5 w-5", config.color)} />
                  <span className="font-bold text-foreground">RDM {rdm.number}</span>
                </div>
                <span className="text-xs text-muted-foreground font-medium">{rdm.time}</span>
              </div>
              
              <div className={cn("text-xs font-semibold mb-2", config.color)}>
                {config.label}
              </div>
              
              {rdm.description && (
                <p className="text-xs text-muted-foreground leading-relaxed">
                  {rdm.description}
                </p>
              )}
            </Card>
          );
        })}
      </div>
    </div>
  );
};

export default RDMTimeline;
