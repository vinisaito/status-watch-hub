import json
import boto3
import os
from datetime import datetime
from boto3.dynamodb.conditions import Key

# Nome da tabela DynamoDB (configure no Lambda > Environment Variables)
TABLE_NAME = os.environ.get("DYNAMODB_TABLE", "painelmonitoracao_obs")

dynamodb = boto3.resource("dynamodb")
table = dynamodb.Table(TABLE_NAME)

def lambda_handler(event, context):
    try:
        # Log da requisição recebida
        print("Evento recebido:", json.dumps(event))

        # Se vier pelo API Gateway REST, o body vem como string
        body = event.get("body")
        if body:
            body = json.loads(body)
        else:
            return {
                "statusCode": 400,
                "body": json.dumps({"error": "Body da requisição vazio"})
            }

        # Extrair campos
        number = body.get("number")
        observacao = body.get("observacao")
        status = body.get("status")

        if not number or not observacao or not status:
            return {
                "statusCode": 400,
                "body": json.dumps({"error": "Campos obrigatórios: number, observacao, status"})
            }

        # Item a salvar
        item = {
            "number": str(number),  # Garantir que está em string
            "observacao": observacao,
            "status": status,
            "createdAt": datetime.utcnow().isoformat()
        }

        # Salvar no DynamoDB
        table.put_item(Item=item)

        print("Item salvo com sucesso:", item)

        return {
            "statusCode": 200,
            "body": json.dumps({"message": "Registro inserido com sucesso", "item": item})
        }

    except Exception as e:
        print("Erro na lambda:", str(e))
        return {
            "statusCode": 500,
            "body": json.dumps({"error": str(e)})
        }








{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "dynamodb:PutItem",
        "dynamodb:GetItem",
        "dynamodb:UpdateItem",
        "dynamodb:DeleteItem",
        "dynamodb:Scan",
        "dynamodb:Query"
      ],
      "Resource": "arn:aws:dynamodb:us-east-1:123456789012:table/painelmonitoracao_obs"
    }
  ]
}


