const updateStatusFinal = useCallback((
  chamado: number,
  levelOrKey: string | number,
  status: string
) => {
  if (typeof levelOrKey === 'number') {
    // ğŸ”¹ Atualiza status do nÃ­vel (ex: level2_status)
    const levelStatusKey = `level${levelOrKey}_status`;
    return sendMessage({ action: 'updateStatusFinal', chamado, levelStatusKey, status });
  }

  if (levelOrKey === 'statusFinal') {
    // ğŸ”¹ Atualiza statusFinal
    return sendMessage({ action: 'updateStatusFinal', chamado, statusFinal: status });
  }

  // ğŸ”¹ Atualiza um campo especÃ­fico jÃ¡ passado como string (ex: "level3_status")
  return sendMessage({ action: 'updateStatusFinal', chamado, levelStatusKey: levelOrKey, status });
}, [sendMessage]);
