import { Search } from 'lucide-react';
import { Input } from '@/components/ui/input';

interface ActionTableHeaderProps {
  searchTerm: string;
  setSearchTerm: (term: string) => void;
  filteredCount: number;
  totalCount: number;
}

export const ActionTableHeader = ({ 
  searchTerm, 
  setSearchTerm, 
  filteredCount, 
  totalCount 
}: ActionTableHeaderProps) => {
  return (
    <div>
      {/* Campo de Pesquisa */}
      <div className="relative mb-4">
        <Search className="absolute left-3 top-1/2 h-4 w-4 -translate-y-1/2 text-muted-foreground" />
        <Input
          placeholder="Pesquisar por chamado, tipo, grupo, status, tÃ­tulo..."
          value={searchTerm}
          onChange={(e) => setSearchTerm(e.target.value)}
          className="pl-10"
        />
      </div>

      {/* Contador de resultados */}
      {searchTerm && (
        <div className="text-sm text-muted-foreground">
          {filteredCount === 0 ? (
            <span>Nenhum resultado encontrado para "{searchTerm}"</span>
          ) : (
            <span>
              {filteredCount} resultado{filteredCount !== 1 ? 's' : ''}
              {filteredCount !== totalCount && ` de ${totalCount} `}
              para "{searchTerm}"
            </span>
          )}
        </div>
      )}
    </div>
  );
};
