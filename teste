                />
              </div>
            </div>

            {/* Scheduling */}
            <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div className="space-y-2">
                <Label htmlFor="data_inicio_programacao">Data/Hora In√≠cio *</Label>
                <Input
                  id="data_inicio_programacao"
                  type="datetime-local"
