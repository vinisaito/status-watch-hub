const fetchAlerts = () => {
  fetch(`${API_BASE}/acompanhamento`)
    .then((res) => res.json())
    .then((data) => {
      console.log("ðŸš€ Dados recebidos da API:", data);
      const updated = data.map((alert) => ({
        ...alert,
        localTimeRemaining: alert.timeRemaining,
      }));
      setAlerts(updated);
    })
    .catch(err => console.error("Erro ao buscar alertas:", err));
};
